{
	"name": "@dumpstate/dbaction",
	"version": "0.2.2",
	"description": "reader monad for database connection",
	"main": "lib/index.js",
	"scripts": {
		"build": "tsc --project tsconfig.json",
		"build:test": "tsc --project test.tsconfig.json",
		"lint": "npm run style:check",
		"prepublish": "npm run build",
		"style:check": "prettier --check .",
		"style:fix": "prettier --write .",
		"test": "npm run build:test && PGUSER=dbaction PGHOST=localhost PGDATABASE=dbaction_db tap libtest/test/*.test.js libtest/test/**/*.test.js"
	},
	"author": "Albert Sadowski <asadowski@mailbox.org>",
	"license": "MIT",
	"devDependencies": {
		"@types/tap": "^15.0.8",
		"@types/pg": "^8.10.1",
		"pg": "^8.10.0",
		"prettier": "2.8.8",
		"tap": "^16.3.4",
		"typescript": "^5.0.4"
	},
	"optionalDependencies": {
		"pg": "8.x"
	},
	"tap": {
		"check-coverage": false
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/",
		"access": "public"
	}
}
